{% block graphType %}column{% endblock %}

{% block graphOptions %}{
	"is3D":false,
	"width": "650",
	"height": 250,
	"fontSize": 16,
	"legend": "none",
	"chartArea.width": "100%",
	"colors": ["#528cb6", "#26537c", "#3f759f", "#999", "#666"],
	"chartArea": {
		"left": 80,
		"top": 15,
		"width": "500",
		"height" :"175"
	},
	"vAxis": {
		"minValue": 0,
