{% extends '::_templates/main' %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets
		'@Message:Mothership:ControlPanel::resources/assets/css/basic.css'
		'@Message:Mothership:ControlPanel::resources/assets/css/fonts.css'
		'@Message:Mothership:ControlPanel::resources/assets/css/cp.css'
		output='/assets/css/ms_cp.css'
		filter='csscogulerewrite'
	%}
		<link rel="stylesheet" href="{{ asset_url }}">
	{% endstylesheets %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{% javascripts
		'@Message:Mothership:ControlPanel::resources/assets/js/components/history.js/scripts/bundled/html5/jquery.history.js'
		'@Message:Mothership:ControlPanel::resources/assets/js/livePane.jquery.js'
		'@Message:Mothership:ControlPanel::resources/assets/js/nestedAccordian.jquery.js'
		'@Message:Mothership:ControlPanel::resources/assets/js/setup.js'
		'@Message:Mothership:ControlPanel::resources/assets/js/forms.js'
		'@Message:Mothership:ControlPanel::resources/assets/js/help.js'
		'@Message:Mothership:ControlPanel::resources/assets/js/title.js'
		'@Message:Mothership:ControlPanel::resources/assets/js/dropdown.js'
		'@Message:Mothership:ControlPanel::resources/assets/js/feedback.js'
		'@Message:Mothership:ControlPanel::resources/assets/js/jScrollPane.js'
		'@Message:Mothership:ControlPanel::resources/assets/js/mousewheel.js'

		output='/assets/js/ms_cp.js'
	%}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}


{% block body %}
	<div class="container-cp">

		<div class="loading-spinner">
			<p>Loading&hellip;</p><div class="spinner"></div>
		</div>
		
		<nav class="navigation">
			<h1 class="vendor">
				<a href="{{ url('ms.cp.dashboard') }}">
					{{ app.cfg.mothership.appName }}
				</a>
			</h1>
			{{ render(controller('Message:Mothership:ControlPanel::Controller:Menu#main')) }}
			<a class="logout" href="{{ url('ms.cp.logout') }}">Log Out</a>
		</nav>

		<section class="clear">
			{% block content %}{% endblock %}
		</section>
		<footer class="footer" role="contentinfo">
			<small class="copy">&copy; <a href="http://message.co.uk">Message</a> {{ "now"|date('Y') }}</small>
			<a href="//{{ app.cfg.mothership.url|trim('//') }}" target="_blank" class="website"><i class="icon-external-link"></i>{{ app.cfg.mothership.url }}</a>
		</footer>
</div>
{% endblock %}