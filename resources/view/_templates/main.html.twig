<!DOCTYPE html>
<html lang="en" class="no-js">
	<head>
		<meta charset="utf-8">

		<title>{% block title %}Mothership Control Panel{% endblock %}</title>
		
		<link rel="shortcut icon" type="image/png" href="/cogules/Message:Mothership:ControlPanel/images/favicon.png" />

		{% block stylesheets %}
			{% stylesheets
				'@Message:Mothership:ControlPanel::resources/assets/css/basic.css'
				'@Message:Mothership:ControlPanel::resources/assets/css/fonts.css'
				output='/assets/css/ms_base.css'
				filter='csscogulerewrite'
			%}
				<link rel="stylesheet" href="{{ asset_url }}">
			{% endstylesheets %}
		{% endblock %}

		{% block javascripts %}
			{% javascripts
				'@Message:Mothership:ControlPanel::resources/assets/js/components/jquery/jquery.js'
				'@Message:Mothership:ControlPanel::resources/assets/js/setup.js'

				output='/assets/js/ms_base.js'
			%}
				<script src="{{ asset_url }}"></script>
			{% endjavascripts %}
		{% endblock %}

	</head>
	<body>

		{{ render(controller('Message:Mothership:ControlPanel::Controller:Component#flashes')) }}

		{% block body %}
		{% endblock %}

	</body>
</html>