{% extends '::_templates/cp' %}

{% block title %}Mothership Dashboard{% endblock %}

{% block content %}
	<section class="dashboard home">
		<section class="main">
			<div class="modules">
				<div class="module landscape welcome">
					<h2 class="title">
						Welcome Richard
					</h2>
					<div class="wrap">
						<div class="profile-image">
							<img src="http://placehold.it/165x165"  width="165" height="165" alt="">
						</div>
						<div class="activity">
							<h3>Your recent activity</h3>
							<ul>
								<li><strong>Last edited page</strong><time>4 hours ago</time><span><a href="#">Shop</a></span></li>
								<li><strong>Last edited product</strong><time>2 days ago</time><span><a href="#">203 SERIES (PVD Rose Gold / Walnut Leather)</a></span></li>
								<li><strong>Last processed order</strong><time>1 hours ago</time><span><a href="#">Order ID 20106</a></span></li>
							</ul>
						</div>
					</div>
				</div>
				<div class="module sq">
					<h2 class="title">
						Orders fulfillment time (Avg.)
					</h2>
					<div class="wrap center">
						<h2 class="large-text">36<span class="small">hrs</span></h2>
					</div>
				</div>
				<div class="module landscape">
					<h2 class="title">
						Popular products (week)
					</h2>
					<div class="wrap">
						<table
				            title="Popular products"
				            id="popularProducts"
				            summary="Most popular products"
				            data-attc-createChart="true"
				            data-attc-colDescription="product"
				            data-attc-colValues="purchased"
				            data-attc-location="productsArea"
				            data-attc-hideTable="true"
				            data-attc-type="bar"
				            data-attc-googleOptions='{"is3D":false, "width": "600", "height": 250, "fontSize": 16, "legend": "none", "chartArea.width": "100%", "colors":["#528cb6", "#26537c", "#3f759f", "#999", "#666"], "chartArea":{"left":110,"top":15,"width":"500","height":"175"}, "animation":{"duration": 1000,"easing":"out"}}'
				            data-attc-controls='{"showHide":false,"create":false,"chartType":false}'
				            >
				            <thead>
				                <tr>
				                    <th id="product">Product</th>
				                    <th id="purchased">Purchased</th>
				                </tr>
				            </thead>
				            <tbody>
				                <tr>
				                	<td>301 Series</td>
				                	<td>450</td>
				                </tr>
				                <tr>
				                	<td>Rubber Strap</td>
				                	<td>1001</td>
				                </tr>
				                <tr>
				                	<td>152 Series</td>
				                	<td>854</td>
				                </tr>
				                <tr>
				                	<td>104 Series</td>
				                	<td>806</td>
				                </tr>
				            </tbody>
				        </table>
				        <div id="productsArea"></div>
					</div>
				</div>
				<div class="module landscape">
					<h2 class="title">
						Orders
					</h2>
					<div class="wrap">
						<div class="column center">
							<h3 class="small-text">In</h3>
							<h2 class="large-text">72</h2>
						</div>
						<div class="column center">
							<h3 class="small-text">Out</h3>
							<h2 class="large-text">64</h2>
						</div>
					</div>
				</div>
				<div class="module sq large">
					<h2 class="title">
						Total sales (week)
					</h2>
					<div class="wrap">
						<h2 class="medium-text">&pound;25,412.00</h2>
						<table
				            title="Weekly Sales"
				            id="sales"
				            summary="day"
				            data-attc-createChart="true"
				            data-attc-colDescription="day"
				            data-attc-colValues="amount"
				            data-attc-location="salesArea"
				            data-attc-hideTable="true"
				            data-attc-type="area"
				            data-attc-googleOptions='{"is3D":false, "width": "634", "height": 492, "fontSize": 16, "legend": "none", "colors":["#528cb6", "#26537c", "#3f759f", "#999", "#666"], "chartArea":{"top":30,"left":60,"width":"560","height":"431"}}'
				            data-attc-controls='{"showHide":false,"create":false,"chartType":false}'
				            >
				            <thead>
				                <tr>
				                    <th id="day">Day</th>
				                    <th id="amount">Amount</th>
				                </tr>
				            </thead>
				            <tbody>
				                <tr>
				                	<td>Mon</td>
				                	<td>&pound;2502.00</td>
				                </tr>
				                <tr>
				                	<td>Tues</td>
				                	<td>&pound;12502.00</td>
				                </tr>
				                <tr>
				                	<td>Wed</td>
				                	<td>&pound;1502.00</td>
				                </tr>
				                <tr>
				                	<td>Thur</td>
				                	<td>&pound;3502.00</td>
				                </tr>
				                <tr>
				                	<td>Fri</td>
				                	<td>&pound;7238.00</td>
				                </tr>
				                <tr>
				                	<td>Sat</td>
				                	<td>&pound;345.00</td>
				                </tr>
				                <tr>
				                	<td>Sun</td>
				                	<td>&pound;3456.00</td>
				                </tr>
				            </tbody>
				        </table>
				        <div id="salesArea"></div>
			        </div>
				</div>
				<div class="module portrait recent-list">
					<h2 class="title">
						CMS
					</h2>
					<div class="wrap">
						<h3>Recently added/edited</h3>
						<ol>
							<li><time>4 hours ago</time><a href="#">Shop</a></li>
							<li><time>1 days ago</time><a href="#">152 Series</a></li>
							<li><time>2 days ago</time><a href="#">Profile</a></li>
							<li><time>4 days ago</time><a href="#">Information</a></li>
							<li><time>4 days ago</time><a href="#">Press area</a></li>
						</ol>
						<hr>
						<h3>Recently deleted</h3>
						<ol>
							<li><time>1 hour ago</time><span>Gift Voucher</span><a class="restore button small" href="#">Restore</a></li>
							<li><time>9 days ago</time><span>203 SERIES (PVD Rose Gold / Walnut Leather)</span><a class="restore button small" href="#">Restore</a></li>
							<li><time>9 days ago</time><span>351 SERIES	 Brushed Steel / Blue NBR Rubber</span><a class="restore button small" href="#">Restore</a></li>
						</ol>
					</div>
				</div>
				<div class="module landscape">
					<h2 class="title">
						Discounts
					</h2>
					<div class="wrap">
						<table
				            title="Discount amounts"
				            id="discountAmounts"
				            summary="Discount amounts and savings"
				            data-attc-createChart="true"
				            data-attc-colDescription="pieDescription"
				            data-attc-colValues="pieValues"
				            data-attc-location="AttendancePercentagesPie"
				            data-attc-hideTable="true"
				            data-attc-type="column"
				            data-attc-googleOptions='{"is3D":false, "width": 638, "height": 240, "legend": "none", "fontSize": 16, "colors":["#528cb6", "#26537c", "#3f759f", "#999", "#666"], "chartArea":{"top":25,"width":"620","height":"180"}, "role":"annotation"}'
				            data-attc-controls='{"showHide":false,"create":false,"chartType":false}'
				            >
				            <thead>
				                <tr>
				                    <th id="pieDescription">Value</th>
				                    <th id="pieValues">Amount</th>
				                </tr>
				            </thead>
				            <tbody>
				                <tr>
				                    <td>Income from discounted orders (£4750)</td>
				                    <td>£4750</td>
				                </tr>
				                <tr>
				                    <td>Customer savings (£628)</td>
				                    <td>£628</td>
				                </tr>
				            </tbody>
				        </table>
				        <div id="AttendancePercentagesPie"></div>
				    </div>
				</div>
			</div>
		</section>
	</section>
{% endblock %}