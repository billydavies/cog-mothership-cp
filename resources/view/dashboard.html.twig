{% extends '::_templates/cp' %}

{% block title %}Mothership Dashboard{% endblock %}

{% block content %}
	<section class="dashboard home">
		<section class="main">
			<div class="modules">
				<div class="module landscape">
					<h2 class="title">
						Welcome Joe
					</h2>
				</div>
				<div class="module sq">
					<h2 class="title">
						Orders
