{% extends '::_templates/cp' %}

{% block content %}
<section class="sidebar">
	{% block sidebar %}{% endblock %}
</section>
<section class="main">

		{% for key,types in app.session.getFlashBag.all %}
			{% for message in types %}
				<div class="feedback {{ key }}">
					<p>{{ message|raw }}</p>
				</div>
			{% endfor %}
		{% endfor %}
	{% block main %}{% endblock %}
</section>
{% endblock %}