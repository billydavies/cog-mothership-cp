<!DOCTYPE html>
<html lang="en" class="no-js">
	<head>
		<meta charset="utf-8">
		<title>{% block title %}Mothership Control Panel{% endblock %}</title>

		{% stylesheets
			'Message:Mothership:ControlPanel::_assets/css/basic.css'
			'Message:Mothership:ControlPanel::_assets/css/fonts.css'
			'Message:Mothership:ControlPanel::_assets/css/cp.css'
			output='/assets/css/ms_cp.css'
		%}
			<link rel="stylesheet" href="{{ asset_url }}">
		{% endstylesheets %}
		<link rel="stylesheet" href="//fast.fonts.com/cssapi/97534885-97aa-4253-9892-b983a466ab47.css">

		{% javascripts
			'Message:Mothership:ControlPanel::_assets/js/components/jquery/jquery.min.js'
			'Message:Mothership:ControlPanel::_assets/js/components/history.js/scripts/bundled/html5/jquery.history.js'
			'Message:Mothership:ControlPanel::_assets/js/setup.js'
			'Message:Mothership:ControlPanel::_assets/js/livePane.jquery.js'
			'Message:Mothership:ControlPanel::_assets/js/forms.js'
			output='/assets/js/ms_cp.js'
		%}
			<script src="{{ asset_url }}"></script>
		{% endjavascripts %}

	</head>
	<body>
		{% for types in flashes %}
			{% for message in types %}
				<p>{{ message|raw }}</p>
			{% endfor %}
		{% endfor %}

		{% block body %}
		{% endblock %}
	</body>
</html>