{% extends '::_templates/main' %}

{% block title %}Log in to Mothership{% endblock %}

{% block body %}
	<div class="container-login">

		<div class="center">
			<header>

				<span class="spaceship"></span>

				<h1>Welcome to Mothership</h1>

				<span class="shadow"></span>

			</header>


			<section class="form">

				<h1>Log in to Mothership</h1>

				{{ render(controller('Message:User::Controller:Authentication#login', {
					redirectURL: url(redirectRoute),
					forgottenPasswordRoute: 'ms.cp.password.request'
				})) }}

			</section>
		</div>

		<footer role="contentinfo">

		<small class="copy">&copy; <a href="http://message.co.uk">Message</a> {{ "now"|date('Y') }}</small>
		<a href="{{ cfg.mothership.url }}" target="_blank" class="website icon-external-link">{{ cfg.mothership.url }}</a>

		</footer>
	</div>
{% endblock %}